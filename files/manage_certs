#! /usr/bin/env bash

current_certs() {
  mkdir -p /etc/letsencrypt/live 2>/dev/null
  for domain in $(ls /etc/letsencrypt/live | grep -v README); do
    certbot install --test-cert --non-interactive --agree-tos --nginx --no-redirect --cert-name $domain
  done
}

new_cert() {
  if [ ! -d /etc/letsencrypt/live/$1 ]; then
    echo Processing $domain
    certbot run --test-cert --register-unsafely-without-email --non-interactive --agree-tos --nginx --no-redirect -d $1
  fi
}

bash /monitor &
current_certs
while sleep 5; do
  for entry in $(sort -u /tmp/http.log | grep -v '^-$'); do
    domain=$(basename $entry .)
    new_cert $domain
  done
done
